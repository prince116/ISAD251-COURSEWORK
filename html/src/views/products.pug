extends layout.pug

block content
    .jumbotron
        .container.text-center
            h1 Cake Shop
            p Fat and Sweet

    .container
        .row
            .col-xs-12
                ol.breadcrumb
                    li
                        a(href="./") Home
                    li.active Products
    .container
        .row
            .col-xs-12
                .category__wrapper
                    ol.category__options
                        li.active All
                        li
                            a(href="#") Food
                        li
                            a(href="#") Drink
    
    .container 
        .row
            - for( var count = 0; count < 18; count++){
            .col-md-3.col-sm-6.col-xs-12
                .panel
                    .panel-body
                        .product__wrapper
                            .product__img
                                a(href="./product_details.html")
                                    img.img-responsive(src="https://placehold.it/150x150?text=IMAGE", style="width:100%;", alt="Image")
                                .product__action
                                    .product__action-left
                                        a(href="#", title="Add to cart") 
                                            span.glyphicon.glyphicon-shopping-cart 
                                            span.text Add to cart
                                    .product__action-right
                                        a(href="#") 
                                            span.glyphicon.glyphicon-heart-empty
                                        a(href="./product_details.html") 
                                            span.glyphicon.glyphicon-new-window
                            .product__details
                                p Product Name
                                p $100.00
                                p In stock
            - }
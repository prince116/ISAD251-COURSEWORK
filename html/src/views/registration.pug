extends layout.pug

block content
    .jumbotron
        .container.text-center
            h1 Cake Shop
            p Fat and Sweet

    .container
        .row
            .col-xs-12
                a(href="#") Home
                |  / Registration

    .container
        .row
            .col-xs-12.text-center
                .registration__wrapper
                    form(action="#", method="post")
                        h2.text-center Registration
                        .form-group
                            input.form-control.registration__input-field(type="text", name="firstname", placeholder="First Name", required="required")
                        .form-group
                            input.form-control.registration__input-field(type="text", name="lastname", placeholder="Last Name", required="required")
                        .form-group
                            input.form-control.registration__input-field(type="text", name="username", placeholder="Username", required="required")
                        .form-group
                            input.form-control.registration__input-field(type="email", name="email", placeholder="Email", required="required")
                        .form-group
                            input.form-control.registration__input-field(type="tel", name="phone", placeholder="Phone", required="required")
                        .form-group
                            input.form-control.registration__input-field(type="password", name="password", placeholder="Password", required="required")
                        .form-group
                            input.form-control.registration__input-field(type="password", name="confirm_password", placeholder="Confirm Password", required="required")
                        .form-group
                            input.registration__button(type="submit", name="registration", value="Submit")

extends layout.pug

block content
    .jumbotron
        .container.text-center
            h1 Cake Shop
            p Fat and Sweet

    .container
        .row
            .col-xs-12
                ol.breadcrumb
                    li
                        a(href="./") Home
                    li.active Admin

    .container
        .row
            .col-xs-12.col-sm-3
                .admin__menu-wrapper
                    .admin__menu-item
                        .admin__menu-item-group
                            span.glyphicon.glyphicon-list
                        .admin__menu-item-group 
                            a(href="#") Orders
                                span.badge 30
                    .admin__menu-item
                        .admin__menu-item-group
                            span.glyphicon.glyphicon-shopping-cart
                        .admin__menu-item-group
                            a(href="#") Products
                                span.badge 100
                    
            .col-xs-12.col-sm-9
                .admin__orders-wrapper
                    .admin__group
                        .admin__heading Orders
                    .admin__group
                        - for( var n = 1; n <= 5; n++){
                            .admin__record
                                .admin__sub-group.left
                                    .admin__text
                                        b Order No. : INV00000#{n}
                                    .admin__text Transaction Status: Payment Successful
                                    .admin__text Order Date: 2019/11/06
                                    .admin__text Amount: $1000.00
                                .admin__sub-group.right
                                    .admin__text.text-right
                                        a(href="./admin_order_details.html")
                                            span.glyphicon.glyphicon-menu-right
                        - }

                



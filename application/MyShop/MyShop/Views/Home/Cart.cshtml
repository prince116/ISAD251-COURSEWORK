<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="active">Cart</li>
            </ol>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="custom-title">Your Cart</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="cart__wrapper">
                <table>
                    <thead>
                        <tr>
                            <th class="text-left" colspan="2">Product</th>
                            <th class="text-left">Price</th>
                            <th class="text-center">Quanity</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <td class="text-right" colspan="5"><a class="cart__button" href="#">Empty Cart</a></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="cart__footer text-right">
                <div class="cart__total-wrapper"><span class="cart__total-title">Total</span><span class="cart__total"></span></div>
                <div class="cart__checkout-wrapper text-center"><a class="cart__button btn-checkout" href="javascript:void(0)">Proceed to Checkout</a></div>
            </div>
        </div>
    </div>
</div>

<script id="template" type="x-tmpl-mustache">
    <tr>
        <td class="cart__image-wrapper"><a href="{{ product_url }}"><img class="cart__image" src="{{ file_path }}" alt="Image" title="Product Image"></a></td>
        <td class="text-left">
            <div class="cart__product-name"> <a href="{{ product_url }}">{{ product_name }}</a></div>
            <p><a class="cart__remove" href="javascript:void(0)" data-OrderItemID="{{ item_id }}">Remove</a></p>
        </td>
        <td class="text-left cart__unit-price">{{ price }}</td>
        <td class="text-center">
            <select class="form-control" name="quantity" data-OrderItemID="{{ item_id }}">
                {{#options}}<option value="{{ value }}" {{#selected}}selected{{/selected}}>{{ text }}</option>{{/options}}
            </select>
        </td>
        <td class="text-right cart__product-total">{{ sub_total }}</td>
    </tr>
</script>

@using (@Html.BeginForm("Checkout", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "CheckoutForm" }))
{
    @Html.AntiForgeryToken()
}

@section Scripts {
    @Scripts.Render("~/bundles/mustache")
    <script>
        $(function () {

            $("#CheckoutForm").submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: "/api/Checkout",
                    method: "POST",
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    statusCode: {
                        200: function () {
                            window.location.href = "/thankyou";
                        }
                    }
                });
            });

            $('body').on('change', 'select[name="quantity"]', function () {
                var ItemID = $(this).attr('data-OrderItemID'),
                    Quantity = $("option:selected", this).val();

                $.ajax({
                    url: "/api/Order",
                    method: "PUT",
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        ItemID: ItemID,
                        Quantity: Quantity
                    },
                    statusCode: {
                        200: function (response) {
                            if (response.Status == "SUCCESS") {
                                location.reload();
                            } else {
                                $('#messageModal .modal-body p').text(response.Message)
                                $('#messageModal').modal('show');
                            }
                        }
                    }
                });

            })

            $('body').on('click', '.cart__remove', function () {
                var ItemID = $(this).attr('data-OrderItemID');

                deleteOrderedItem(ItemID);
            })

            $('.btn-checkout').click(function () {
                $('#CheckoutForm').submit();
            })

            function getOrderedItems() {

                var template = $('#template').html();
                Mustache.parse(template);

                $.ajax({
                    url: "/api/Order",
                    method: "GET",
                    dataType: "JSON",
                    statusCode: {
                        200: function (response) {

                            var html = "";

                            $.each(response.orderedItems, function (index, value) {

                                var options = [];

                                for (var i = 1; i <= value.stock; i++) {
                                    options.push({
                                        value: i,
                                        text: i,
                                        selected: ( i == value.quantity ) ? true : false
                                    });
                                }

                                html += Mustache.render(template, {
                                    item_id: value.item_id,
                                    product_id: value.product_id,
                                    product_url: "/Product/Details/" + value.product_id,
                                    product_name: value.product_name,
                                    price: value.price,
                                    file_path: value.file_path,
                                    quantity: value.quantity,
                                    sub_total: value.sub_total,
                                    options: options
                                });
                            });

                            $('.cart__wrapper tbody').html(html);
                            $('.cart__total').text(response.totalAmount);
                        }
                    }
                });
            }

            function deleteOrderedItem(ItemID) {

                $.ajax({
                    url: "/api/Order",
                    method: "DELETE",
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        ItemID: ItemID,
                    },
                    dataType: "json",
                    statusCode: {
                        200: function () {
                            location.reload();
                        }
                    }
                });
            }

            getOrderedItems();
        })
    </script>
}

@{
    ViewBag.Title = "Purchase History";
}


<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                <li class="active">Purchase History</li>
            </ol>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="custom-title">Order No. : @ViewBag.OrderID</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="cart__wrapper">
                <table>
                    <tr>
                        <th class="text-left" colspan="2">Product</th>
                        <th class="text-left">Price</th>
                        <th class="text-center">Quanity</th>
                        <th class="text-right">Total</th>
                    </tr>
                    @foreach (var item in ViewBag.OrderItems)
                    {
                        <tr>
                            <td class="cart__image-wrapper"><a href="@Url.Action("Details", "Product", new { id = item.Product.ProductID })"><img class="cart__image" src="https://placehold.it/570x570?text=IMAGE" alt="Image" title="@item.Product.ProductName"></a></td>
                            <td class="text-left">
                                <div class="cart__product-name"> <a href="@Url.Action("Details", "Product", new { id = item.Product.ProductID })">@item.Product.ProductName</a></div>
                            </td>
                            <td class="text-left cart__unit-price">$@item.Product.Price</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-right cart__product-total">$@(item.Quantity*item.Product.Price)</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="cart__button-wrapper"><a class="cart__button" href="@Url.Action("Index", "Profile")">Back</a></div>
        </div>
    </div>
</div>
@using MyShop.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="active">Login</li>
            </ol>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="register__wrapper">
                <div class="register__part">
                    <h2>New to our Shop?</h2>
                    <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Sit, libero sed. Eveniet voluptatem numquam harum quisquam. Similique et rerum molestiae magnam esse suscipit itaque unde cumque natus, amet eveniet vitae.</p><br><a class="register__button" href="@Url.Action("Register", "Account")">Create an account</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="login__wrapper">
                <div class="login__part">
                    <h2>Welcome Back!<br>Please Sign in now</h2>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control login__username", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control login__password", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        <input class="login__button" type="submit" name="login" value="login">
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $(function () {
        $.ajax({
            url: "/Product/Save",
            method: "POST",
            dataType: "JSON",
            data: {
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                FirstName: "Prince",
                LastName: "Wong"
            },
            success: function (response) {
                console.log(response);
            }
        })
    })
</script>
}